<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.ssafyworld.mapper.roomMapper">
	<select id="selectUser" resultType="UserDTO">
		SELECT uid,uname,password
		FROM user;
	</select>
	
	<!-- 회원가입 -->
	<insert id="insertUser" parameterType="UserDTO">
		INSERT
		INTO user (uid, uname, password)
		VALUES (#{uid}, #{uname}, #{password});
	</insert>

	<!-- 이름 수정 -->
	<update id="updateUserName" parameterType="UserDTO">
		UPDATE user 
		SET name = #{uname} , password = #{password} 
		WHERE uid = #{uid};
	</update>
	
	<!-- 회원 탈퇴  -->
	<delete id="deleteUser" parameterType="UserDTO">
		DELETE 
		from user 
		where uid = #{uid};
	</delete>
	
</mapper>
